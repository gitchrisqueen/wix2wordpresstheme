# WordPress Environment Configuration
# Copy this file to .env and update with your actual values

# Project Settings
PROJECT_NAME=wix2wp

# WordPress Settings
WP_URL=http://localhost:8080
WP_TITLE=Wix Conversion Preview
WP_ADMIN_USER=admin
WP_ADMIN_PASS=password
WP_ADMIN_EMAIL=admin@example.com

# Database Settings
MYSQL_ROOT_PASSWORD=rootpassword
MYSQL_DATABASE=wordpress
MYSQL_USER=wordpress
MYSQL_PASSWORD=wordpress
DB_HOST=db

# Ports
WORDPRESS_PORT=8080
PHPMYADMIN_PORT=8081

# Theme Settings
THEME_NAME=wix2wp
THEME_PATH=../theme/output

# Provisioning
WP_SETUP_VERSION=1.0.0
MANIFEST_PATH=../crawler/output/manifest.json

# Feature Flags
AUTO_PROVISION=true
CREATE_SAMPLE_CONTENT=false
