# Environment Configuration Example
# Copy this file to .env and update with your actual values

# Project Settings
PROJECT_NAME=wix2wordpresstheme
NODE_ENV=development

# Crawler Settings
CRAWLER_HEADLESS=true
CRAWLER_TIMEOUT=30000
CRAWLER_MAX_PAGES=100

# WordPress Settings
WORDPRESS_PORT=8080
WORDPRESS_DB_HOST=db
WORDPRESS_DB_NAME=wordpress
WORDPRESS_DB_USER=wordpress
WORDPRESS_DB_PASSWORD=wordpress
WORDPRESS_DB_ROOT_PASSWORD=rootpassword

# PHPMyAdmin Settings
PHPMYADMIN_PORT=8081

# Theme Generator Settings
THEME_NAME="Converted Wix Theme"
THEME_AUTHOR="Theme Generator"
THEME_VERSION=1.0.0

# Test Settings
TEST_VISUAL_THRESHOLD=0.01
TEST_HEADLESS=true

# Logging Settings
LOG_LEVEL=info
LOG_TO_CONSOLE=true
LOG_TO_FILE=true

# Feature Flags
ENABLE_ASSET_OPTIMIZATION=true
ENABLE_VISUAL_TESTS=true
ENABLE_DOM_TESTS=true
ENABLE_ACCESSIBILITY_TESTS=true
ENABLE_PERFORMANCE_TESTS=true

# Advanced Settings
MAX_CONCURRENT_CRAWLS=3
ASSET_MAX_SIZE=10485760
IMAGE_QUALITY=85
