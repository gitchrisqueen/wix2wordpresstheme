{
  "name": "wix2wordpresstheme",
  "version": "0.1.0",
  "description": "A fully automated, repeatable pipeline to convert Wix websites into pixel-perfect WordPress themes",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "discover": "tsx crawler/src/cli/discover.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write \"**/*.{ts,tsx,json,md}\"",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "npm run wp:up && npm run wp:provision && npm run wp:info",
    "build": "echo 'Build not implemented yet'",
    "crawl": "tsx crawler/src/cli/crawl.ts",
    "spec": "tsx crawler/src/cli/spec.ts",
    "generate": "tsx theme-generator/src/cli/generate.ts",
    "generate-theme": "tsx theme-generator/src/cli/generate.ts",
    "deploy-theme": "echo 'Theme deployment not implemented yet'",
    "pipeline": "echo 'Full pipeline not implemented yet'",
    "docker:up": "docker compose -f wordpress-local/docker-compose.yml up -d",
    "docker:down": "docker compose -f wordpress-local/docker-compose.yml down",
    "docker:logs": "docker compose -f wordpress-local/docker-compose.yml logs -f",
    "docker:reset": "docker compose -f wordpress-local/docker-compose.yml down -v && npm run docker:up",
    "wp:up": "docker compose -f wp-env/docker-compose.yml up -d db wordpress phpmyadmin",
    "wp:down": "docker compose -f wp-env/docker-compose.yml down",
    "wp:logs": "docker compose -f wp-env/docker-compose.yml logs -f",
    "wp:reset": "docker compose -f wp-env/docker-compose.yml down -v && npm run dev",
    "wp:provision": "docker compose -f wp-env/docker-compose.yml up setup",
    "wp:info": "echo '\n=== WordPress Environment Ready ===\nWordPress: http://localhost:8080\nAdmin: http://localhost:8080/wp-admin\nUsername: admin\nPassword: password\nPHPMyAdmin: http://localhost:8081\n'",
    "verify": "tsx verifier/src/cli/verify.ts",
    "logs:tail": "tail -f logs/*.log",
    "logs:clean": "rm -f logs/*.log",
    "health-check": "echo 'Health check not implemented yet'",
    "clean:all": "rm -rf node_modules crawler/output theme-generator/output logs/*.log docs/REPORTS"
  },
  "keywords": [
    "wix",
    "wordpress",
    "theme",
    "converter",
    "migration",
    "scraper",
    "playwright"
  ],
  "author": "gitchrisqueen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/gitchrisqueen/wix2wordpresstheme.git"
  },
  "bugs": {
    "url": "https://github.com/gitchrisqueen/wix2wordpresstheme/issues"
  },
  "homepage": "https://github.com/gitchrisqueen/wix2wordpresstheme#readme",
  "devDependencies": {
    "@playwright/test": "^1.58.0",
    "@types/css-tree": "^2.3.11",
    "@types/node": "^20.11.5",
    "@types/pixelmatch": "^5.2.6",
    "@types/pngjs": "^6.0.5",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "playwright": "^1.58.0",
    "prettier": "^3.2.4",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.18"
  },
  "dependencies": {
    "ajv": "^8.12.0",
    "ajv-formats": "^3.0.1",
    "cheerio": "^1.0.0-rc.12",
    "commander": "^11.1.0",
    "css-tree": "^3.1.0",
    "fast-xml-parser": "^4.3.3",
    "pixelmatch": "^7.1.0",
    "pngjs": "^7.0.0",
    "robots-parser": "^3.0.1",
    "zod": "^3.22.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
